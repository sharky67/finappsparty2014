<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendMoneyActivity" >
    
 <GridLayout
     android:id="@+id/gridlayout1"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_gravity="center"
     android:layout_weight="1"
     android:background="@drawable/receive_money"
     android:columnCount="15"
     android:orientation="horizontal" >

     <TextView
         android:id="@+id/textView2"
         android:layout_width="16dp"
         android:layout_column="12"
         android:layout_gravity="left|center_vertical"
         android:layout_row="3"
         android:layout_rowSpan="4" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="129dp"
         android:layout_height="wrap_content"
         android:layout_column="1"
         android:layout_columnSpan="8"
         android:layout_gravity="left|top"
         android:layout_row="1" />

     <Button
         android:id="@+id/buttonAccept"
         android:layout_width="100dp"
         android:layout_height="50dp"
         android:layout_column="8"
         android:layout_gravity="right|center_vertical"
         android:layout_row="6"
         android:background="@drawable/transfer_money" />

     <Button
         android:id="@+id/buttonDecline"
         android:layout_width="100dp"
         android:layout_height="50dp"
         android:layout_column="14"
         android:layout_gravity="center|center_vertical"
         android:layout_row="6"
         android:background="@drawable/decline" />

 </GridLayout>

</LinearLayout>